<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<h2>Log in</h2>
<div class="row g-3 align-items-center">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
  <div class: "col-auto me-3"> <%= f.label :email, class:"form-text" %><br /></div>
  <div class: "col-auto"> <%=f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email"   %></div>
  </div>
  <div class="field form-group">
    <%= f.label :password,class:"form-text" %><br />
    <%= f.password_field :password,class:"form-control" , autocomplete: "current-password" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me,class:"form-text" %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
